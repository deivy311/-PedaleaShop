@page "/gg"
@inherits ProductsBase

@if(Products == null && ErrorMessage == null)
{
    <DisplaySpinner/>

}
else if(ErrorMessage != null)
{
    <DisplayError ErrorMessage="@ErrorMessage"></DisplayError>
}
else
{
    <h3 class="mb-5">Products</h3>

    var productCount = Products.Count();
    List<int> ColorsIdsToSearch = new List<int>() { 1, 2, 3, 4, 5  };
    @if (productCount > 0)
    {
        @foreach(var prodGroup in GetGroupedProducts(ColorsIdsToSearch))
        {
            <h4>@GetCategoryName(prodGroup)</h4>
            <div class = "row mt-3">
                <DisplayProducts Products = "@prodGroup.Take(4)"></DisplayProducts>
            </div>
            <hr class="mb-3"/>
        }

    }

}